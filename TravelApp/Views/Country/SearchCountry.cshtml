@model IEnumerable<Country>
<h1>Search Results</h1>

<table class="table table-bordered table-striped" style="width:100%">  
    <tr>
        <th>Flag</th>
        <th>Id</th>
        <th>Name</th>
        <th>Region</th>
    </tr>


    @foreach (var country in Model)
    {
        <tr>
            <td><a href="/Country/ViewCountry/@country.ccn3">
                <img width="166", height="100" src="@country.flags.png" />
                </a></td>
            <td><a href=/Country/ViewCountry/@country.ccn3>@country.ccn3</td>
            <td><h2>@country.name.common</h2></td>
            <td>@country.region</td>
        </tr>
    }
</table>
